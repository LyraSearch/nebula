{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "outDir": "dist",
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "useUnknownInCatchVariables": false
  },
  "include": ["src/*.ts", "src/**/*.ts"]
}
