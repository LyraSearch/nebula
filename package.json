{
  "name": "@lyrasearch/nebula",
  "version": "0.0.0-alpha.1",
  "description": "Runtime-agnostic build system for Lyra",
  "scripts": {
    "changelog": "auto-changelog -p",
    "lint": "ts-standard --fix",
    "test": "c8 -c src/tests-config/c8.json tap --rcfile=src/tests-config/tap.yml src/**/*.test.ts",
    "build:node:cjs": "tsc --project tsconfig.cjs.json",
    "build:node:module": "tsc --project tsconfig.esm.json",
    "build": "rimraf ./dist && pnpm build:node:module && pnpm build:node:cjs"
  },
  "bin": {
    "nebula": "./dist/cjs/index.js"
  },
  "repository": {
    "url": "https://github.com/lyrasearch/nebula"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "keywords": [
    "lyra",
    "bundler",
    "full-text search"
  ],
  "author": {
    "email": "ciao@micheleriva.it",
    "name": "Michele Riva",
    "url": "https://github.com/MicheleRiva"
  },
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@types/js-yaml": "^4.0.5",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.7.8",
    "@types/tap": "^15.0.7",
    "@typescript-eslint/parser": "^5.33.1",
    "auto-changelog": "^2.4.0",
    "babel-loader": "^8.2.5",
    "c8": "^7.12.0",
    "eslint": "^8.22.0",
    "js-yaml": "^4.1.0",
    "rimraf": "^3.0.2",
    "tap": "^16.3.0",
    "ts-node": "^10.9.1",
    "ts-standard": "^11.0.0",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0"
  },
  "dependencies": {
    "@lyrasearch/plugin-data-persistence": "0.0.2",
    "@nearform/lyra": "^0.0.5",
    "ansi-colors": "^4.1.3",
    "minimist": "^1.2.6",
    "ora": "^6.1.2"
  },
  "ts-standard": {
    "project": "./tsconfig.json",
    "ignore": [
      "node_modules",
      "**/dist/**"
    ]
  }
}
