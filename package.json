{
  "name": "@lyrasearch/nebula",
  "version": "0.0.4-alpha.2",
  "description": "Runtime-agnostic build system for Lyra",
  "scripts": {
    "predev": "rm -rf dist && mkdir dist && cp -a src/resources dist/",
    "dev": "swc -s -w -d dist src",
    "prebuild": "rm -rf dist && npm run lint",
    "build": "swc --delete-dir-on-start -d dist src && chmod a+x ./dist/index.js",
    "postbuild": "cp -a src/resources dist/",
    "format": "prettier -w src",
    "changelog": "auto-changelog -p",
    "lint": "pnpm run format && eslint --ext .js,.ts src"
  },
  "bin": {
    "nebula": "./dist/index.js"
  },
  "repository": {
    "url": "https://github.com/lyrasearch/nebula"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "keywords": [
    "lyra",
    "bundler",
    "full-text search"
  ],
  "author": {
    "email": "ciao@micheleriva.it",
    "name": "Michele Riva",
    "url": "https://github.com/MicheleRiva"
  },
  "contributors": [
    {
      "email": "paolo@cowtech.it",
      "name": "Paolo Insogn",
      "url": "https://github.com/ShogunPanda"
    }
  ],
  "license": "ISC",
  "dependencies": {
    "@lyrasearch/lyra": "^0.3.1",
    "@lyrasearch/plugin-data-persistence": "0.0.4",
    "commander": "^9.4.1",
    "esbuild": "^0.16.7",
    "form-data": "^4.0.0",
    "js-yaml": "^4.1.0",
    "jszip": "^3.10.1",
    "ora": "^6.1.2",
    "undici": "^5.12.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.18",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.11.9",
    "@types/tap": "^15.0.7",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "auto-changelog": "^2.4.0",
    "c8": "^7.12.0",
    "commitizen": "^4.2.5",
    "eslint": "^8.27.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-with-typescript": "^24.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "tap": "^16.3.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  }
}
